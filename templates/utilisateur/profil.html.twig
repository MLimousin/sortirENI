{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<h1>Mon profil</h1>

<form class="form-profil" method="post">
    <div>
        <img src="img/profil/{{ app.user.photo }}" alt="photo de profil">
    </div>
    <ul>
        <li>
            <label for="pseudo">Pseudo : </label>
            <input type="text" value="{{ app.user.pseudo }}" name="pseudo" id="pseudo">
        </li>
        <li>
            <label for="prenom">Prénom : </label>
            <input type="text" value="{{ app.user.prenom }}" name="prenom" id="prenom">
        </li>
        <li>
            <label for="nom">Nom : </label>
            <input type="text" value="{{ app.user.nom }}" name="nom" id="nom">
        </li>
        <li>
            <label for="telephone">Téléphone : </label>
            <input type="text" value="{{ app.user.telephone }}" name="telephone" id="telephone">
        </li>
        <li>
            <label for="email">Email : </label>
            <input type="email" value="{{ app.user.email }}" name="email" id="email">
        </li>
        <li>
            <label for="mdp">Mot de Passe : </label>
            <input type="password" name="mdp" id="mdp">
        </li>
        <li>
            <label for="mdpconf">Confirmation : </label>
            <input type="password" name="mdpconf" id="mdpconf">
        </li>
        <li>
            <label for="campus">Campus : </label>
            <select id="campus" name="campus">
                <option value="NIORT" {% if(app.user.campus == 'NIORT') %} selected {% endif %}>NIORT</option>
                <option value="RENNES" {% if(app.user.campus == 'RENNES') %} selected {% endif %}>RENNES</option>
                <option value="SAINT HERBLAIN" {% if(app.user.campus == 'SAINT HERBLAIN') %} selected {% endif %}>SAINT HERBLAIN</option>
            </select>
        </li>
        <li>
            <label for="photo">Ma photo : </label>
            <input type="file" name="photo" id="photo" value="{{ app.user.photo }}">
        </li>
        <li>
            <button type="submit" name="enregistrer">Enregistrer</button>
            <a href="{{ path('app_Sorties') }}">Retour à l'accueil</a>
        </li>
    </ul>

</form>
{% endblock %}
